{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "vireo-property/property-search",
	"version": "1.0.0",
	"title": "Property Search",
	"category": "vireo-property",
	"icon": "search",
	"description": "Display a search form for properties with basic filters.",
	"keywords": ["property", "search", "filter", "find"],
	"textdomain": "vireo-property",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php",
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"showKeywordSearch": {
			"type": "boolean",
			"default": true
		},
		"showPropertyType": {
			"type": "boolean",
			"default": true
		},
		"showLocation": {
			"type": "boolean",
			"default": true
		},
		"resultsPage": {
			"type": "string",
			"default": ""
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"buttonText": {
			"type": "string",
			"default": "Search Properties"
		}
	},
	"example": {
		"attributes": {
			"showKeywordSearch": true,
			"showPropertyType": true,
			"showLocation": true
		}
	}
}