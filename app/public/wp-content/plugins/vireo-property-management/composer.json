{
  "name": "plughaus/property-management-core",
  "description": "Core property management plugin for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "PlugHaus Studios",
      "email": "support@plughausstudios.com",
      "homepage": "https://plughausstudios.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.12"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "PlugHaus\\PropertyManagement\\": "includes/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-cs": "phpcs",
    "fix-cs": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}