{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "jest",
      "@types/wordpress__blocks",
      "@types/wordpress__data"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "app/public/wp-content/plugins/vireo-property-management/**/*.ts",
    "app/public/wp-content/plugins/vireo-property-management/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "build",
    "dist",
    "**/*.min.js"
  ],
  "references": [
    { "path": "./app/public/wp-content/plugins/vireo-property-management" }
  ]
}