{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/public/wp-content/*"],
      "@plugins/*": ["app/public/wp-content/plugins/*"],
      "@themes/*": ["app/public/wp-content/themes/*"],
      "@shared/*": ["packages/shared/*"]
    },
    "types": [
      "node",
      "jest",
      "@types/wordpress__blocks",
      "@types/wordpress__data"
    ]
  },
  "include": [
    "app/public/wp-content/**/*.ts",
    "app/public/wp-content/**/*.tsx",
    "app/public/wp-content/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "tools/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "build",
    "dist",
    "**/*.min.js"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./app/public/wp-content/plugins/plughaus-property-management" }
  ]
}