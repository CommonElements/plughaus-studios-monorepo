{
  "name": "vireo/property-management-core",
  "description": "Vireo Property Management - Core functionality",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Vireo Designs",
      "email": "support@vireodesigns.com",
      "homepage": "https://vireodesigns.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Vireo\\PropertyManagement\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vireo\\PropertyManagement\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}