<?xml version="1.0"?>
<ruleset name="PlugHaus Studios Coding Standards">
  <description>WordPress Coding Standards for PlugHaus Studios</description>

  <!-- Scan all files in directory -->
  <file>./app/public/wp-content/plugins/plughaus-property-management</file>
  <file>./app/public/wp-content/themes/plughaus-studios</file>
  <file>./packages</file>

  <!-- Exclude vendor and build directories -->
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/build/*</exclude-pattern>
  <exclude-pattern>*/dist/*</exclude-pattern>
  <exclude-pattern>*/assets/js/*.min.js</exclude-pattern>
  <exclude-pattern>*/assets/css/*.min.css</exclude-pattern>

  <!-- Include the WordPress-Extra standard -->
  <rule ref="WordPress-Extra">
    <!-- Allow short array syntax -->
    <exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
    <!-- Allow short ternary operators -->
    <exclude name="WordPress.PHP.DisallowShortTernary.Found"/>
  </rule>

  <!-- Include the WordPress-Docs standard -->
  <rule ref="WordPress-Docs"/>

  <!-- Let's also check that everything is properly documented -->
  <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
    <properties>
      <property name="prefixes" type="array">
        <element value="phpm"/>
        <element value="plughaus"/>
        <element value="PHPM"/>
        <element value="PLUGHAUS"/>
      </property>
    </properties>
  </rule>

  <!-- Check for PHP compatibility -->
  <rule ref="PHPCompatibilityWP"/>

  <!-- Set minimum PHP version -->
  <config name="minimum_supported_wp_version" value="5.8"/>
  <config name="testVersion" value="7.4-"/>

  <!-- Show progress of the run -->
  <arg value="p"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>

  <!-- Use colors in output -->
  <arg name="colors"/>

  <!-- Strip the filepaths down to the relevant bit -->
  <arg name="basepath" value="./"/>

  <!-- Check up to 20 files simultaneously -->
  <arg name="parallel" value="20"/>

  <!-- Cache results between runs -->
  <arg name="cache" value=".phpcs-cache"/>

  <!-- Set extensions to check -->
  <arg name="extensions" value="php"/>
</ruleset>